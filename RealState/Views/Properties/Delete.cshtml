@model RealState.Models.Property

<h1>Delete Property</h1>

<p class="text-danger">Are you sure you want to delete this property?</p>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        <p class="card-text"><strong>Price:</strong> @Model.Price</p>
        <p class="card-text"><strong>Video URL:</strong> <a href="@Model.VideoUrl" target="_blank">@Model.VideoUrl</a>
        </p>
        <p class="card-text"><strong>Bidding Starts:</strong> @Model.BiddingStartTime?.ToString("g")</p>
        <p class="card-text"><strong>Bidding Ends:</strong> @Model.BiddingEndTime?.ToString("g")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Pass the property ID -->
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
