@model RealState.Models.Property

<h1>Edit Property</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VideoUrl"></label>
        <input asp-for="VideoUrl" class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BiddingStartTime"></label>
        <input asp-for="BiddingStartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="BiddingStartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BiddingEndTime"></label>
        <input asp-for="BiddingEndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="BiddingEndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
